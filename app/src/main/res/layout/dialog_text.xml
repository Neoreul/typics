<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dialog_text"
    android:background="#000">

    <EditText
        android:id="@+id/edtViewText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:background="@drawable/text_view_theme"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtViewText"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        >
        <Button
            android:id="@+id/btnTextCancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="#000"
            android:textColor="@color/popUpConfirm"
            android:onClick="btnTextCancel"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/btnTextDone"
            android:layout_marginRight="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Done"
            android:background="#000"
            android:textColor="@color/popUpConfirm"
            android:onClick="btnTextDone"/>
    </LinearLayout>

</RelativeLayout>
