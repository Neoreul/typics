<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#000"
    android:id="@+id/dialog_color"
    android:padding="10dp">
    <!--Style-->
    <RelativeLayout
        android:id="@+id/rlTextVIewSpacing"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:id="@+id/textSpacingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:bufferType="spannable"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="#fff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlTextVIewSpacing">
        <TableLayout
            android:id="@+id/tblSpacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:visibility="visible"
            android:orientation="vertical">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spacing"
                    android:textStyle="italic"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:layout_marginTop="7dp"
                    android:id="@+id/textView" />
            </TableRow>
            <TableRow>
                <GridLayout
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Letter"
                        android:textColor="#fff"
                        android:textSize="12dp"
                        android:alpha="0.8"/>
                    <SeekBar
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/seekBarLetter"
                        android:max="300"
                        android:progress="150"
                        android:progressDrawable="@drawable/progress_color"
                        android:thumb="@drawable/thumb_fill_alpha"
                        />
                    <TextView
                        android:id="@+id/txtLetter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#fff"
                        android:textSize="12dp" />
                </GridLayout>
            </TableRow>
            <TableRow>
                <GridLayout
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Line   "
                        android:textColor="#fff"
                        android:textSize="12dp"
                        android:alpha="0.8"/>
                    <SeekBar
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/seekBarLine"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/progress_color"
                        android:thumb="@drawable/thumb_fill_alpha"
                        />
                    <TextView
                        android:id="@+id/txtLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#fff"
                        android:textSize="12dp" />
                </GridLayout>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tblSpacing"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:paddingBottom="10dp">
            <Button
                android:id="@+id/btnSpacingCancel"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:text="Cancel"
                android:textColor="@color/popUpConfirm"
                android:background="#000"/>
            <Button
                android:id="@+id/btnSpacingDone"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Done"
                android:textColor="@color/popUpConfirm"
                android:background="#000"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
