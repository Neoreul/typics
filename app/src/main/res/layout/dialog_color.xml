<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/llTextColor"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textColorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"/>
    </RelativeLayout>

    <TableLayout
        android:id="@+id/tblColor"
        android:layout_width="300dp"
        android:layout_below="@+id/llTextColor"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <TableRow>
            <TextView
                android:text="Color"
                android:textColor="#fff"
                />
        </TableRow>
        <TableRow
            android:layout_marginBottom="7dp">
            <GridLayout>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:text="Alpha"
                    android:alpha="0.8"
                    android:textSize="12dp"
                    android:textColor="#fff"/>
                <SeekBar
                    android:layout_marginTop="5dp"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBarA_Color"
                    android:max="255"
                    android:progress="255"
                    android:progressDrawable="@drawable/progress_color"
                    android:thumb="@drawable/thumb_fill_alpha"
                    />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/txt_A_Color"
                    android:text="255"
                    android:textColor="#fff"/>
            </GridLayout>
        </TableRow>
        <TableRow
            android:layout_marginBottom="7dp">
            <GridLayout>
                <SeekBar
                    android:layout_marginTop="5dp"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBarR_Color"
                    android:max="255"
                    android:progress="255"
                    android:progressDrawable="@drawable/progress_color"
                    android:thumb="@drawable/thumb_fill_red"
                    />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/txt_R_Color"
                    android:text="255"
                    android:textColor="#fff"/>
            </GridLayout>
        </TableRow>
        <TableRow
            android:layout_marginBottom="7dp">
            <GridLayout>
                <SeekBar
                    android:layout_marginTop="5dp"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBarG_Color"
                    android:max="255"
                    android:progress="255"
                    android:progressDrawable="@drawable/progress_color"
                    android:thumb="@drawable/thumb_fill_green"
                    />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/txt_G_Color"
                    android:text="255"
                    android:textColor="#fff"/>
            </GridLayout>
        </TableRow>
        <TableRow>
            <GridLayout>
                <SeekBar
                    android:layout_marginTop="5dp"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBarB_Color"
                    android:max="255"
                    android:progress="255"
                    android:progressDrawable="@drawable/progress_color"
                    android:thumb="@drawable/thumb_fill_blue"
                    />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/txt_B_Color"
                    android:text="255"
                    android:textColor="#fff"/>
            </GridLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tblColor"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        >
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="#000"
            android:textColor="@color/popUpConfirm"
            android:id="@+id/btnColorCancel"
            android:layout_marginRight="10dp"/>
        <Button
            android:layout_marginRight="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Done"
            android:background="#000"
            android:textColor="@color/popUpConfirm"
            android:id="@+id/btnColorDone"/>
    </LinearLayout>

</RelativeLayout>
